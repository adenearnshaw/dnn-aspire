<div class="card">
    <div class="card-header">
        @Name foodbank needs...
    </div>

    <ul class="list-group list-group-flush">
        @foreach (var need in Needs)
        {
            <li class="list-group-item">@need</li>
        }
    </ul>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "";

    [Parameter]
    public List<string> Needs { get; set; } = [];
}
